%head
  %script{src: 'jquery-min.js', type: 'text/javascript'}
  %script{src: 'underscore-min.js', type: 'text/javascript'}
  %script{src: 'repos.js', type: 'text/javascript'}
  %link{:rel => :stylesheet, :type => :"text/css", :href => "repos.css"}
%body
  %h3 Hello
  %form{action: '/repos', method: 'post', id: 'repoform'}
    Build Script:
    %textarea{form: 'repoform', name: 'script', cols: "40"}
      = @build_script
    %br
    %br
    %input{type: 'submit', value: 'Save'}
    %br
    #repo-list
    /.onoffswitch
    / %input{type: "checkbox", name: "onoffswitch", class: "onoffswitch-checkbox", id: "testSwitch", checked: false, onclick: "alert('switched')"}
    /%label{:class => "onoffswitch-label", for: "testSwitch"}
    / .onoffswitch-inner
    /.onoffswitch-switch
